{% extends 'base.html.twig' %} {% block title %}Club de musique de Berck - S'incrire{% endblock %} {% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/security.css')}}">{% endblock %} {% block body %}
<div class="container">
    <div class="col-12 margin ">
        <div class="box">
            <h2 class="cover-heading text-center" id="test">Se cr√©er un compte</h2>
            {{ form_start(form)}}
            <div class="inputBox">
                {% if form_errors(form.username) %}
                <div class="form-error">
                    <span class="badge badge-danger">Erreur</span>
                    <small>{{form_errors(form.username) }}</small>
                </div>
                {% endif %}
                <label for="registration_username"><i class="fa fa-user"></i></label> {{form_widget(form.username, {'attr': {'placeholder' : 'Nom d\'utilisateur', 'autofocus': 'autofocus'}})}}
            </div>
            <div class="inputBox">
                {% if form_errors(form.email) %}
                <div class="form-error">
                    <span class="badge badge-danger">Erreur</span>
                    <small>{{form_errors(form.email)}}</small>
                </div>
                {% endif %}
                <label for="registration_email"><i class="fa fa-at"></i></label> {{form_widget(form.email, {'attr': {'placeholder' : 'Email'}})}}
            </div>
            <div class="inputBox">
                {% if form_errors(form.password) %}
                <div class="form-error">
                    <span class="badge badge-danger">Erreur</span>
                    <small> {{form_errors(form.password) }} </small>
                </div>
                {% endif %}
                <label for="registration_password"><i class="fa fa-lock"></i></label> {{form_widget(form.password, {'attr': {'placeholder' : 'Mot de passe'}})}}
            </div>
            <div class="inputBox">
                <button type="submit" class="btn btn-connexion mt-4">S'enregistrer</button>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>

{% endblock %}