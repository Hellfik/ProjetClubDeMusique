{% extends 'base.html.twig' %} 
{% block title %}Blog{% endblock %} 
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/blog.css')}}">
{% endblock %}
{% block body %}
<div class="col-12 margin">
    <h2 class="h1-responsive mb-5 font-weight-bold text-center">Articles Recents</h2>
</div>
<section class="description col-md-8">
    {% for article in articles %}
    <div class="card mb-4 bg-white">
        <img class="card-img-top" src="{{article.image}}" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">{{article.title}}</h2>
            <p class="card-text">{{article.content}}</p>
            <a href="{{ path('blog_show', {'id': article.id})}}" class="btn btn-success">Lire la suite &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            Posté le {{article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('h:i')}}
        </div>
    </div>

    {% endfor %}
</section>
{{ include('blog/sidebar.html.twig')}}
{% endblock %}