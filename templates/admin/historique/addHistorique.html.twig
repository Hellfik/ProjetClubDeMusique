{% extends 'adminBase.html.twig'%} {% block body %}
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success">
        <h2>Ajouter un historique</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="card-text">
                {{ form_start(formHistorique)}}
                <div class="form-group">
                    {{form_row(formHistorique.date, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(formHistorique.evenements, {'attr' : {'class' : 'form-control'}})}}
                </div>
            </div>
            <div class="form-group">
                <a href=""><button class="btn btn-success">Ajouter</button></a>
            </div>
            {{form_end(formHistorique)}}
        </div>
    </div>
</div>
</div>

{% endblock %}