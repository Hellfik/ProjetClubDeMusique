{% extends 'adminBase.html.twig'%} {% block body %}
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success">
        <h2>Modifier un évènement</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <h5 class="card-title text-center">{{historique.date | upper}} {{historique.evenements | upper}}</h5>
            <div class="card-text">
                {{ form_start(form)}}
                <div class="form-group">
                    {{form_row(form.date, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.evenements, {'attr' : {'class' : 'form-control'}})}}
                </div>
            </div>
            <div class="form-group">
                <a href="{{path('admin_historique')}}"><button class="btn btn-success">Modifier</button></a>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
</div>

{% endblock %}