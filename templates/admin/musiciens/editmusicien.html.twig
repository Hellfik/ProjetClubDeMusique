{% extends 'adminBase.html.twig'%} {% block body %}
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success">
        <h2>Modifier le musicien</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <h5 class="card-title text-center">{{musiciens.nom | upper}} {{musiciens.prenom | upper}}</h5>
            <div class="card-text">
                {{ form_start(form)}}
                <div class="form-group">
                    {{form_row(form.nom, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.prenom, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    <label for="musicien_imageFile_file" class="edit-pic"><i class="fa fa-upload" aria-hidden="true"></i>  Upload image</label> {{form_row(form.imageFile, {'attr' : {'class' : 'form-control'}})}}
                </div>
            </div>
            <div class="form-group">
                <a href=""><button class="btn btn-success">Modifier</button></a>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
</div>

{% endblock %}