{% extends 'adminBase.html.twig'%} {% block body %}
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success">
        <h2>Ajouter un musicien</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="card-text">
                {{ form_start(formMusicien)}}
                <div class="form-group">
                    {{form_row(formMusicien.nom, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(formMusicien.prenom, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    <label for="musicien_imageFile_file" class="edit-pic"><i class="fa fa-upload" aria-hidden="true"></i>  Upload image</label> {{form_row(formMusicien.imageFile, {'attr' : {'class' : 'form-control'}})}}
                </div>
            </div>
            <div class="form-group">
                <a href="{{ path('admin_musiciens') }}"><button class="btn btn-success">Ajouter</button></a>
            </div>
            {{form_end(formMusicien)}}
        </div>
    </div>
</div>
</div>

{% endblock %}