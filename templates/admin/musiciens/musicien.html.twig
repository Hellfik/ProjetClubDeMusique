{% extends 'adminBase.html.twig'%} {% block body %} {% for message in app.flashes('success') %}
<div class="container">
    <div class="col-md-12 alert alert-success">
        {{ message }}
    </div>
</div>
{% endfor %}
<div class="card col-md-8 mx-auto my-5 px-0">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success d-flex justify-content-center">
        {{ message | upper}}
    </div>
    {% endfor %}
    <div class="card-header bg-success">
        <h2>Gérer les Instruments</h2>
        <form class="form-inline my-2 my-lg-0" method="GET">
            {% if send %}
            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Rechercher" aria-label="Search" value="{{search}}"> {% else %}
            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Rechercher" aria-label="Search"> {% endif %}
            <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Rechercher</button>
        </form>
    </div>
    <div class="card-body">
        <h5 class="card-title text-center">La liste complète des musiciens</h5>
        <div class="card-text table-responsive">
            <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr class="text-center">
                        <th class="th-sm">#</th>
                        <th class="th-sm">Nom
                        </th>
                        <th class="th-sm">Prénom
                        </th>
                        <th class="th-sm">Photo
                        </th>
                        <th colspan="2" class="th-sm">Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% set compteur = 0 %} {% for musicien in musiciens %}
                    <tr class="text-center h-100">
                        {% set compteur = compteur + 1 %}
                        <td class="align-middle">{{ compteur }}</td>
                        <td class="align-middle">{{ musicien.nom }}</td>
                        <td class="align-middle">{{ musicien.prenom }}</td>
                        <td class="align-middle">{{ musicien.imageName }}</td>
                        <td colspan="2"><a href="{{path('admin_edit_musiciens', {'id' : musicien.id})}}" class="btn btn-success m-2">Modifier</a><a href="{{path('admin_delete_musiciens', {'id' : musicien.id})}}" class="btn btn-danger m-2">Supprimer</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <ul>
    </div>
    <div class="navigation d-flex">
        {{ knp_pagination_render(musiciens) }}
    </div>
</div>
{% endblock %}