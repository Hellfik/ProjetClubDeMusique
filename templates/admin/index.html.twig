{% extends 'adminBase.html.twig' %} {% block title %}Club de musique de berck sur mer - Admin{% endblock %} {% block body %}
<div class="container-fluid">
    <div class="row header p-3">
        <div class="col-md-12 text-center">
            <h1 class="h2"><span class="fa fa-cog" aria-hidden="true"></span> Tableau de bord <small> Gérer le site</small></h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <button type="button" class="btn btn-primary btn-lg btn-block my-3"><i class="fa fa-plus px-2"></i>Ajouter un article</button>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-success btn-lg btn-block my-3"><i class="fa fa-plus px-2"></i>Ajouter un instrument</button>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-danger btn-lg btn-block my-3"><i class="fa fa-plus px-2"></i>Ajouter une famille</button>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row my-5">
            <div class="col-lg-9">
                <h3>Derniers utilisateurs enregistrés</h3>
                <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th class="th-sm">#</th>
                            <th class="th-sm">Username
                            </th>
                            <th class="th-sm">Email
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in last_users %}
                        <tr class="text-center h-100">
                            <td class="align-middle">{{loop.index}}</td>
                            <td class="align-middle">{{user.username}}</td>
                            <td class="align-middle">{{user.email}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-lg-3">
                <div class="card text-white text-center bg-primary mb-3">
                    <div class="card-body count-widget">
                        <h5 class="card-title">Articles</h5>
                        <p class="card-text"><i class="fa fa-align-center mx-2"></i><span>{{posts}}</span></p>
                        <a href=" " class="btn btn-widget">Voir</a>

                    </div>
                </div>
                <div class="card text-white text-center bg-success mb-3">
                    <div class="card-body count-widget">
                        <h5 class="card-title">Instruments</h5>
                        <p class="card-text"><i class="fa fa-music mx-2"></i><span>{{instruments}}</span></p>
                        <a href=" " class="btn btn-widget">Voir</a>
                    </div>
                </div>
                <div class="card text-white text-center bg-danger mb-3">
                    <div class="card-body count-widget">
                        <h5 class="card-title">Utilisateur{% if users > 1 %}s{% endif %}</h5>
                        <p class="card-text"><i class="fa fa-users mx-2"></i><span>{{users}}</span></p>
                        <a href="{{path('admin_users')}}" class="btn btn-widget">Voir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}