{% extends 'adminBase.html.twig'%} {% block body %}
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success">
        <h2>Modifier la famille d'instrument {{familleInstrument.nom}}</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <h5 class="card-title text-center">{{familleInstrument.nom | upper}}</h5>
            <div class="card-text">
                {{ form_start(form)}}
                <div class="form-group">
                    {{form_row(form.nom, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.description, {'attr' : {'class' : 'form-control'}})}}
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Modifier</button>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
</div>

{% endblock %}