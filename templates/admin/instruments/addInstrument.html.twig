{% extends 'adminBase.html.twig'%} {% block body %}
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success">
        <h2>Ajouter un instrument </h2>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="card-text">
                {{ form_start(formInstrument)}}
                <div class="form-group">
                    {{form_row(formInstrument.nom, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(formInstrument.description, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(formInstrument.familleInstruments, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(formInstrument.imageFile, {'attr' : {'class' : 'form-control'}})}}
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Ajouter</button>
            </div>
            {{form_end(formInstrument)}}
        </div>
    </div>
</div>
</div>

{% endblock %} {% block javascripts %}
<script>
    $("#instrument_imageFile_file").change(function() {
        $("#file-name").text(this.files[0].name);
    });
</script>

{% endblock %}