{% extends 'adminBase.html.twig'%} {% block body %}
<div class="card col-md-8 mx-auto my-5 px-0">
    <div class="card-header bg-success">
        <h2>Modifier l'instrument {{instrument.nom}}</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <h5 class="card-title text-center">{{instrument.nom | upper}}</h5>
            <div class="card-text">
                {{ form_start(form)}}
                <div class="form-group">
                    {{form_row(form.nom, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.description, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.familleInstruments, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_row(form.imageFile, {'attr' : {'class' : 'form-control'}})}}
                </div>
                <p id="file-name"></p>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Modifier</button>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
</div>

{% endblock %} {% block javascripts %}
<script>
    $("#instrument_imageFile").change(function() {
        $("#file-name").text(this.files[0].name);
    });
</script>

{% endblock %}